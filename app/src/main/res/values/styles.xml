<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailActivity" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NowPlaying" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/nowPlaying</item>
        <item name="android:textColor">@color/androidWhite</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_marginStart">@dimen/spacing_large</item>
    </style>

    <style name="CardStackOriginName" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/nowPlaying</item>
        <item name="android:textColor">@color/androidWhite</item>
        <item name="android:textSize">@dimen/text_x_large</item>
        <item name="android:layout_marginStart">@dimen/spacing_large</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
    </style>
    
    <style name="MainCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/spacing_large</item>
        <item name="cardElevation">@dimen/spacing_large</item>
        <item name="android:layout_marginTop">@dimen/spacing_xxx_minus_large</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
    </style>

    <style name="MovieName" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/nowPlaying</item>
        <item name="android:textColor">@color/androidWhite</item>
        <item name="android:textSize">@dimen/text_x_large</item>
        <item name="android:layout_marginStart">@dimen/spacing_large</item>
    </style>

    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/spacing_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/spacing_large</item>
    </style>

    <style name="CollapsedExpandedTitleText" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="DetailActivity.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:layout_marginStart">@dimen/spacing_large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
