<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/spacing_large"
    app:cardCornerRadius="@dimen/spacing_large"
    app:cardElevation="@dimen/spacing_large"
    android:layout_width="200dp"
    android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <tsthec.tsstudy.movieapplicationmvvmstudy.util.GlideCustomImage
                android:id="@+id/glide_authorImg"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/tv_authorName"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/authorName"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>