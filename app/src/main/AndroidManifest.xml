<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tsthec.tsstudy.movieapplicationmvvmstudy">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MovieApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.movie.detail.tv.DetailTVActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/DetailActivity"/>
        <activity android:name=".ui.movie.FavoriteActivity" />
        <activity
            android:name=".ui.movie.detail.movie.DetailMovieActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/DetailActivity" />
        <activity
            android:name=".ui.movie.MovieMainActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>